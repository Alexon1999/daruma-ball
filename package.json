{
  "name": "daruma-ball",
  "productName": "daruma-ball",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "src/index.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently -k 'cross-env BROWSER=NONE npm run start --prefix ./app' 'npm run electron:start'",
    "electron:start": "wait-on tcp:3000 && electron-forge start",
    "package": "npm run build:renderer --prefix ./app && electron-forge package",
    "make": "npm run build:renderer --prefix ./app && electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "Alexon",
    "email": "alexon1999@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "daruma_ball"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.67",
    "@electron-forge/maker-deb": "^6.0.0-beta.67",
    "@electron-forge/maker-rpm": "^6.0.0-beta.67",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.67",
    "@electron-forge/maker-zip": "^6.0.0-beta.67",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "21.1.0",
    "wait-on": "^6.0.1"
  }
}
